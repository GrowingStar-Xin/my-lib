/* 录入书籍的组件样式 */

.loginData{
  position: absolute;
  top: 10rpx;
  left: 50%;
  transform: translateX(-50%);
  overflow-x: hidden;
  overflow-y: scroll;
  width: 90%;
  height: 96%;
  border-radius: 15rpx;
  box-shadow: 1rpx 1rpx 10rpx #1296db,
              1rpx 1rpx 20rpx #1296db;

}
.header{
  position: relative;
  width: 90%;
  font-size: 40rpx;
  padding: 20rpx;
  margin:15rpx  20rpx;
  text-align: center;
}
.header::after{
  content: "";
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 0;
  background: rgba(0, 0, 0, .3);
  width: 60%;
  height: 5rpx;
}
.loginform{
  width: 100%;
  height: 100%;
}

.loginItem{
  display: flex;
  padding: 10rpx 20rpx;
}
.itemText{
  width: 80%;
  border-bottom: 1rpx solid #1296db;
  padding-left: 20rpx;
  color: rgba(0, 0, 0, .5);
}
.title{
  margin-left: 20rpx;
}
.intro_info{
  margin: 0rpx 20rpx;
}
.sendBtn{
  color: #1296db;
  box-shadow: 1rpx 1rpx 10rpx #1296db;
}

