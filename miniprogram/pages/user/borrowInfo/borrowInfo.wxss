/* 查询页面的css样式 */
.record_title{
  position: relative;
  width: 100%;
  height: 100rpx;
  background: transparent;
}
.record_title > text{
  font-size: 35rpx;
  position: absolute;
  left: 50%;
  bottom: 10rpx;
  transform: translateX(-50%);
}
/* 记录列表的样式 */
.record_list{
  padding: 20rpx 0rpx;
  overflow-x: hidden;
  overflow-y: scroll;
  height: 85%;
  width: 100%;
  border-bottom: 1rpx solid rgba(0, 0, 0, .5);
}
/* 每条记录的样式 */
.record_item{
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  margin-bottom: 50rpx;
  padding: 10rpx;
  box-shadow: 1rpx 1rpx 10rpx #1296db,
              1rpx 1rpx 20rpx #1296db;
  position: relative;
  width: 90%;
  border-radius: 10rpx;
}
.record_time{
  padding: 10rpx 0rpx;
  text-align: center;
  font-size: 35rpx;
  font-weight: bold;
  color: rgba(0, 0, 0, .2);
}
.return{
  position:absolute;
  right: 10rpx;
  bottom: 10rpx;
  width: 150rpx;
  height: 150rpx;
}
