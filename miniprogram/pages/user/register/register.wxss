/* 注册模块样式 */
.title{
  position: relative;
  text-align: center;
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
  padding: 10rpx;
}
.title::after{
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  content: "";
  background: #1296db;
  height: 1rpx;
  width: 30%;
}
radio{
  margin-right: 20rpx;
}
.registerContain{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  margin-top: 50rpx;
  width: 80%;
  padding: 30rpx;
  box-shadow: 1rpx 1rpx 10rpx #1296db,
              1rpx 1rpx 20rpx #1296db;
}
.item{
  display: flex;
  height: 80rpx;
  vertical-align: text-bottom;
}
.item input{
  color: #1296db;
  font-size: 35rpx;
  width: 75%;
  padding-left: 20rpx;
  border-bottom: 1rpx solid #1296db;
}

button{
  box-shadow: 1rpx 1rpx 10rpx #1296db;
}