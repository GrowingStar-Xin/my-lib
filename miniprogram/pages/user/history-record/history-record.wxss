/*历史浏览记录 history-record 的样式渲染*/
page{
  width: 100%;
  height: 100%;
  background: #fff;
}

.record_menu_opration{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 80rpx;
}
.record_menu_opration > text{
  margin-right: 40rpx;
  margin-left: 20rpx;
}
.record_wrapper{
  overflow: scroll;
  height: 925rpx;
  margin-top: 20rpx;
  padding: 5rpx 5rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
}
.book_wrapper{
  flex: 0 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 220rpx;
  height: 290rpx;
 
}
.book_img{
  width: 180rpx;
  height: 180rpx;
  box-shadow: 1px 1px 1rpx #ddd;
}

.book_title{
  width: 100%;
  text-align: center;
  display: inline-block;
  margin-top: 20rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.nav{
  position: relative;
  overflow: hidden;
  margin: 10rpx 10rpx;
  border-radius: 15rpx;
  box-shadow: 1rpx 1rpx 1rpx rgba(0, 0, 0, .3);
}
.img_1, .img_2{
  position: absolute;
  display: none;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  background:rgba(0, 0, 0, .08)
}
.img_1 image,
.img_2 image{
  position: absolute;
  left: calc(50% - 50rpx);
  top: calc(50% - 50rpx);
  width: 100rpx;
  height: 100rpx;
}

/* 点击编辑事件触发之后弹窗的窗口样式 */
.operation_menu{
  position: fixed;
  display: flex;
  bottom: 0;
  width: 100%;
  height: 130rpx;
  transition: height .5s;
}
.operation_menu_item{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 100%;
  border: 1rpx solid #ddd;
  outline: none;
  transition: all 1s;
}
.operation_menu_item image{
  margin: 0rpx 10rpx;
  width: 60rpx;
  height: 60rpx;
}
