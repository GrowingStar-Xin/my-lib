/* 搜索框的样式 */
.search_content {
  position: relative;
  top: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  width: 90%;
  height: 100rpx;
  border-radius: 15rpx;
  box-shadow: 1rpx 1rpx 10rpx #1296db,
              1rpx 1rpx 20rpx #1296db;
  box-sizing: border-box;
}
/* .search_content:hover{
  box-shadow: 1rpx 1rpx 10rpx #1296db;
} */
.search_input {
  position: absolute;
  left: 0;
  height: 100%;
  width: 100%;
  padding-left: 30rpx;
}

.search_btn {
  position: absolute;
  right: 0;
  height: 100%;
  outline: none;
  font-size: 40rpx;
  border-left: 1rpx solid #ddd;
  border-radius: 0 15rpx 15rpx 0;
}

 .search_list {
  z-index: 2;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 130rpx;
  width: 90%;
  display: none;
  border-radius: 0 0 15rpx 15rpx;
  box-shadow: 2rpx 2rpx 10rpx #ddd;
}
/*
  搜索结果书籍列表样式
 */
.search_item {
  color: rgba(0, 0, 0, .3);
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 10rpx;
}
/* 
  搜索结果样式
 */
.search_res{
  margin-left: 10rpx;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: rgba(0, 0, 0, .5);
}

.selectedList{
  width: 90%;
}

