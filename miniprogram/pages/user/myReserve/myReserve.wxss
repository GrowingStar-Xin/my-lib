/* 我的预约记录样式 */
page{
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  align-items: center;
}
.title{
  position: relative;
  text-align: center;
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
  padding: 10rpx;
}
.title::after{
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  content: "";
  background: rgba(0, 0, 0, .3);
  height: 1rpx;
  width: 80%;
}
.time{
  display: flex;
  position: relative;
  font-size: 35rpx;
  font-weight: bold;
  padding: 10rpx;
  margin-bottom: 10rpx;
}
.time::after{
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  background: #1296db;
  height: 5rpx;
  width: 90%;
  font-size: 35rpx;
  font-weight: bold;
}
.content{
  width: 80%;
}
.reserve_form{
  position: relative;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  margin-top: 50rpx;
  box-shadow: 1rpx 1rpx 10rpx #1296db,
              1rpx 1rpx 20rpx #1296db;
  margin-bottom: 50rpx;
}
.item{
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-start;
}
