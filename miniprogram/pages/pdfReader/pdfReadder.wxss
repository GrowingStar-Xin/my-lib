.article-container{
  width: 100%;
  height: 100%;
  background: white;
  padding: 10rpx;
  max-height: 90%;
  overflow-y: scroll;
}
.article-container .title{
  text-indent: 2em;
  font-size: 20px;
  font-weight: bold;
  margin: 10px auto;
}
.article-container .content{
  margin-top: 10px;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  width: 94%;
  font-size: 25px;
  text-indent: 1em;
  letter-spacing: 8rpx;
  padding: 10rpx;
}
.article-container .operation{  
  display: flex;
  justify-content: center;
  
}
.article-container .operation .btn,.picker{
  font-size: 20px;
  padding: 10rpx 20rpx;
}
