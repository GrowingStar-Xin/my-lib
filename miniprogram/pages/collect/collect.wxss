/* 收藏页面的css样式 */
/* 推荐图书列表的样式 */
.record_menu_opration{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  width: 100%;
  height: 80rpx;
}
.record_menu_opration > text{
  margin-right: 40rpx;
}
.record_wrapper{
  overflow: scroll;
  margin-top: 20rpx;
  padding: 5rpx 5rpx;
  display: flex;
  flex-direction: row;
  align-content: flex-start;
  justify-content: flex-start;
  flex-wrap: wrap;
}
/*
  书籍的样式
 */
.book_wrapper{
  flex: 0 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: transparent;
  width: 220rpx;
  height: 330rpx;

}
.book_img{
  width: 180rpx;
  height: 220rpx;
  box-shadow: 1px 1px 10rpx #1296db;
}

.book_title{
  width: 100%;
  text-align: center;
  display: inline-block;
  margin-top: 20rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(0, 0, 0, .5);
}
.nav{
  position: relative;
  overflow: hidden;
  margin: 10rpx 10rpx;
  border-radius: 15rpx;
  box-shadow: 1rpx 1rpx 10rpx #1296db;
}
.img_1, .img_2{
  position: absolute;
  display: none;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  background:rgba(0, 0, 0, .08)
}
.img_1 image,
.img_2 image{
  position: absolute;
  right: -20rpx;
  bottom: -20rpx;
  width: 200rpx;
  height: 200rpx;
}

/* 点击编辑事件触发之后弹窗的窗口样式 */
.operation_menu{
  z-index: 100;
  position: fixed;
  display: flex;
  bottom: 0;
  width: 100%;
  height: 130rpx;
  transition: height .5s;
}
.operation_menu_item{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 100%;
  background: #fff;
  border: 1rpx solid #ddd;
  outline: none;
  transition: all 1s;
}
.operation_menu_item image{
  margin: 0rpx 10rpx;
  width: 60rpx;
  height: 60rpx;
}